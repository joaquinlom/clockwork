<div class="jumbotron">
  <div class="container">
    <h3><%= @membership.organization.name %></h3>

    <h5><%= @membership.organization.description %></h5>
  </div>
</div>


      <% @membership.schedules.each do |schedu| %>
      <div class="container">
    <h1>Horario</h1>
  <div class="table-responsive">
    
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <td> <%= schedu.job %> </td>
        </tr>
        <tr>
          <td>Lunes</td>
          <td>Martes</td>
          <td>Miercoles</td>
          <td>Jueves</td>
          <td>Viernes</td>
          <td>Sabado</td>
          <td>Domingo</td>
          <td>Acciones</td>
        </tr>
      </thead>
      <tbody>
          <% schedu.schedule_details.each do |detail| %>
        <tr>
          <td>
            <%if detail.week_day == 'Lunes' %>
            <%= detail.latitude %>
            <%= detail.exit_time %>
            <% end %>
          </td>
          
          <td>
            <%if detail.week_day == 'Martes' %>
            <%= detail.entry_time %>
            <%= detail.exit_time %>
            <% end %>
          </td>
          
          <td>
            <%if detail.week_day == 'Miercoles' %>
            <%= detail.entry_time %>
            <%= detail.exit_time %>
            <% end %>
          </td>
          
          <td>
            <%if detail.week_day == 'Jueves' %>
            <%= detail.entry_time %>
            <%= detail.exit_time %>
            <% end %>
          </td>
          
           <td>
            <%if detail.week_day == 'Viernes' %>
            <%= detail.entry_time %>
            <%= detail.exit_time %>
            <% end %>
          </td>
          
           <td>
            <%if detail.week_day == 'Sabado' %>
            <%= detail.entry_time %>
            <%= detail.exit_time %>
            <% end %>
          </td>
          
           <td>
            <%if detail.week_day == 'Domingo' %>
            <%= detail.entry_time %>
            <%= detail.exit_time %>
            <% end %>
          </td>
  
          <td>
            <button class="btn btn-danger btn-xs"> 
              <span class="glyphicon glyphicon-trash"></span> 
            </button>
            <button class="btn btn-primary btn-xs"> 
              <span class="glyphicon glyphicon-eye-open"></span> 
            </button>
          </td>
          <% end %>
        </tr>
         </tbody>
    </table>
  </div>
      <% end %>
     

</div>