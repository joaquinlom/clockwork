<div class="jumbotron">
  <div class="container">
<%#*<img src="http://alertas.directoriolegislativo.org/wp-content/uploads/2013/01/noimage.png"%> 
<%#*style="width: 140px; height: 140px;" accesskey="" alt="..." class="img-circle">%>
    <h3><%= @membership.organization.name %></h3>
    <h5><%= @membership.organization.description %></h5>
  </div>
</div>

<div class="container">
  <h1>Personal</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <tbody>
        <tr>
          <td>Nombre</td>
          <td>Perfil</td>
          <td>
            <%= select_tag "users", options_from_collection_for_select(@users, "id", "user_name"),
              :include_blank => 'Usuarios' %>
            <button class="btn btn-success btn-xs"> 
              <span class="glyphicon glyphicon-plus"></span> 
            </button>
          </td>
        </tr>
      </tbody>
      <% @memberships.each do |member| %>
        <tr>
          <td>
            <%= member.user.user_name %>
          </td>
          <td>
            <%= member.rol.name %>
          </td>
          <td>
            <button class="btn btn-danger btn-xs"> 
              <span class="glyphicon glyphicon-trash"></span> 
            </button>
            <button class="btn btn-primary btn-xs"> 
              <span class="glyphicon glyphicon-eye-open"></span> 
            </button>
          </td>
          
        </tr>
      <% end %>
    </table>
  </div>

</div>
